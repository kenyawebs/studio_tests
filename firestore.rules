
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can read their own profile, can only create/update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Journal Entries: Readable only by authenticated users, but the client query ensures
    // they only ever request and receive their own entries. Write operations are secure.
    match /journalEntries/{entryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Prayer Requests: Publicly readable, but only logged-in users can create them.
    // Liking/commenting (updates) are also protected.
    match /prayerRequests/{requestId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Allow updates for things like adding a comment or triggering the counter
      allow update: if request.auth != null;
    }
    
    // Distributed counter shards for prayer requests
    match /prayerRequests/{requestId}/counter_shards/{shardId} {
      allow create: if request.auth != null;
    }

    // Social Feed Posts: Publicly readable, but only logged-in users can create them.
    // Liking/commenting (updates) are also protected.
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null;
    }
  }
}
