rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write to their own profile document
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read prayer requests
    match /prayerRequests/{prayerId} {
        allow read: if request.auth != null;
    }
    
    // Allow authenticated users to "vote" using the distributed counter extension
    match /prayerRequests/{prayerId}/counter_shards/{shardId} {
        allow create: if request.auth != null;
    }
  }
}
