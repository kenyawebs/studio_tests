rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can do anything to their own journal entries, but no one else can see them.
    match /journalEntries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow the user to count their own entries.
      allow count: if request.auth != null && request.query.where.field == 'userId' && request.query.where.value == request.auth.uid;
    }

    // Anyone logged in can read the social feed. Users can only create, update, or delete their own posts.
    match /posts/{postId} {
      allow list, get: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow users to count their own posts for the dashboard stats.
      allow count: if request.auth != null && request.query.where.field == 'userId' && request.query.where.value == request.auth.uid;
    }

    // Anyone logged in can read the prayer wall. Users can only create, update, or delete their own requests.
    match /prayerRequests/{requestId} {
      allow list, get: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
       // Allow the distributed counter to work.
      match /counter_shards/{shardId} {
        allow write: if request.auth != null;
      }
      // Allow users to count their own prayer requests for the dashboard stats.
      allow count: if request.auth != null && request.query.where.field == 'userId' && request.query.where.value == request.auth.uid;
    }
  }
}
