rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and modify their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Journal entries are private. Users can only manage their own entries.
    match /journalEntries/{entryId} {
      allow read, list, count, create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Social feed posts can be read by any authenticated user.
    // Users can only create, update, or delete their own posts.
    match /posts/{postId} {
      allow read, list, count: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Prayer requests can be read by any authenticated user.
    // Users can only create, update, or delete their own requests.
    match /prayerRequests/{requestId} {
      allow read, list, count: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow any authenticated user to trigger the prayer count increment.
      match /counter_shards/{shardId} {
        allow create: if request.auth != null;
      }
    }
  }
}
