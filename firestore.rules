rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: This is a temporary rule for debugging purposes ONLY.
    // It allows any authenticated user to read and write all data.
    // This will be replaced with secure rules once the connection is verified.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
