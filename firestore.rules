rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow user creation
      allow create: if request.auth != null;
    }

    // Any authenticated user can read the public social feed.
    // Users can only create, update, or delete their own posts.
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Any authenticated user can read the public prayer wall.
    // Users can only create, update, or delete their own prayer requests.
    match /prayerRequests/{requestId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow the distributed counter to update prayCount
      match /counter_shards/{shardId} {
        allow write: if request.auth != null;
      }
    }

    // Journal entries are private and can only be accessed by the owner.
    match /journalEntries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}