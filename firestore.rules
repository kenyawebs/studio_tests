rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Any authenticated user can see prayer requests and create new ones.
    match /prayerRequests/{requestId} {
      allow list, get: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // The Distributed Counter extension needs permission to write to its shards.
    // This allows any authenticated user to trigger the counter.
    match /prayerRequests/{requestId}/counter_shards/{shardId} {
        allow create: if request.auth != null;
    }

    // Any authenticated user can see posts.
    // Users can only create, update, or delete their own posts.
    match /posts/{postId} {
      allow list, get: if request.auth != null;
      
      // A user can create a post if the post's userId in the new data matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
                    
      // A user can update/delete a post if they are the author of the existing document.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
