
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - bulletproof rules
    match /users/{userId} {
      // Allow reading own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow creating own profile (first time)
      allow create: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.data.uid == userId;
      
      // Allow updating own profile - the bulletproof way
      // This rule ensures an authenticated user can update their own document,
      // but explicitly prevents them from changing their own uid,
      // which is a critical security measure.
      allow update: if request.auth != null && 
                      request.auth.uid == userId &&
                      // Ensure uid field is not present in the update data
                      !('uid' in request.resource.data) &&
                      // Ensure createdAt is not present
                      !('createdAt' in request.resource.data);
    }

    match /journalEntries/{entryId} {
      // User can only CRUD their own journal entries
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /prayerRequests/{requestId} {
      // Anyone authenticated can read requests
      allow read: if request.auth != null;
      // Users can only create/write their own requests
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if request.auth != null;
      // Users can only create/write their own posts
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

  }
}
