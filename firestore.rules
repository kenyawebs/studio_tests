rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can read/write their own profile
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Posts: Any authenticated user can read. Can only write/delete their own.
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow liking (updating a specific field) by any authenticated user
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'comments']);
    }

    // Prayer Requests: Any authenticated user can read. Can only write/delete their own.
    match /prayerRequests/{requestId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;

       // Allow updating prayer count and comments by any authenticated user
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['prayCount', 'comments']);
    }
    
    // Journal Entries: Can only be accessed by the user who created them.
    match /journalEntries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
