
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Prayer requests can be created by any authenticated user
    match /prayerRequests/{requestId} {
      // TEMPORARY DEBUGGING RULE: Allow anyone to read prayer requests.
      allow read: if true;
      allow create: if request.auth != null;

      // Allow the distributed counter extension to update the count
      match /counter_shards/{shardId} {
        allow write: if true;
      }
    }

    // Posts can only be created/updated/deleted by their owner
    match /posts/{postId} {
        // TEMPORARY DEBUGGING RULE: Allow anyone to read posts.
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
