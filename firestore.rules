
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow profile creation during signup
      allow create: if request.auth != null;
    }

    // Prayer requests can be read by any authenticated user.
    // Users can only create, update, or delete their own prayer requests.
    match /prayerRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow the distributed counter extension to write to shards.
      match /counter_shards/{shardId} {
        allow write: if true;
      }
    }

    // Posts can be read by any authenticated user.
    // Users can only create, update, or delete their own posts.
    match /posts/{postId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Journal entries are private and can only be accessed by their owner.
    match /journalEntries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

  }
}

    