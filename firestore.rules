// WARNING: TEMPORARY DEVELOPMENT RULES - NOT FOR PRODUCTION
// These rules are intentionally open to allow the application to run
// so that Firebase can generate the required index-creation links in the terminal.
// Once the indexes are created, these MUST be replaced with the final, secure rules.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read and write to any document.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}